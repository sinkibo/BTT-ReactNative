{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es2015",
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "exclude": ["node_modules", "babel.config.js"]
}
